# Mode Selection - Choose 'runpod' or 'gce'
DISPATCHER_MODE=runpod

# Frontend Configuration
FRONTEND_PORT=3000
JWT_SECRET=your-secret-jwt-key-change-this
AUTH_PASSWORD=your-secure-password

# =====================================
# RUNPOD CONFIGURATION (when DISPATCHER_MODE=runpod)
# =====================================
RUNPOD_API_KEY=your-runpod-api-key
RUNPOD_POD_ID=  # Optional: existing pod ID
RUNPOD_TEMPLATE_ID=  # Optional: template for creating new pods
RUNPOD_GPU_TYPE=NVIDIA L40S
RUNPOD_DISK_SIZE=100
RUNPOD_VOLUME_ID=  # Optional: persistent volume ID

# =====================================
# GCE CONFIGURATION (when DISPATCHER_MODE=gce)
# =====================================
GCP_PROJECT=  # your-gcp-project-id
GCE_INSTANCE=  # comfyui-gpu
GCE_ZONE=  # us-central1-a
GCP_CREDENTIALS_PATH=/tmp/empty  # Path to GCP credentials
SERVICE_ACCOUNT_KEY=/tmp/empty  # Path to service account key
STARTUP_SCRIPT_URL=  # GCS URL to startup script
ALLOWED_IP=  # IP allowed to access ComfyUI

# =====================================
# SHARED CONFIGURATION
# =====================================
DISPATCHER_PORT=8187
COMFYUI_DOMAIN=  # Optional: custom domain for ComfyUI
SSL_EMAIL=  # Optional: email for SSL certificates
CF_CERT_PATH=  # Optional: Cloudflare cert path
CF_KEY_PATH=  # Optional: Cloudflare key path

# Legacy (for GCE mode)
COMFYUI_AUTH_USER=admin
COMFYUI_AUTH_PASS=comfyui123